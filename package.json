{
  "name": "simple-mail-service",
  "version": "1.0.0",
  "description": "Simple mail service",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=production pm2 start ./build/dist/app.js -i 1 --name simple-mail-service",
    "dev": "NODE_ENV=development nodemon --exec ./node_modules/.bin/babel-node $NODE_DEBUG_OPTION ./src/server.js",
    "log": "NODE_ENV=log ./node_modules/.bin/babel-node ./src/server.js",
    "test": "NODE_ENV=test mocha $NODE_DEBUG_OPTION --require @babel/register ./src/{,test/**,**}/*.test.js",
    "test:watch": "NODE_ENV=test mocha $NODE_DEBUG_OPTION --require @babel/register --watch --watch-extensions ./src/{,**}/*.test.js",
    "coverage": "./node_modules/.bin/nyc --reporter html --report-dir ./build/coverage npm test",
    "lint": "./node_modules/.bin/eslint ./src/{,test/**,**}/*.js",
    "format": "prettier-eslint ./src/{,test/**,**}/*.{js,json} --write",
    "build": "./node_modules/.bin/babel ./src --out-dir ./build/dist --source-maps"
  },
  "keywords": [
    "email",
    "nodejs",
    "express",
    "restful-api"
  ],
  "author": "Eric Dybal",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "^2.2.1",
    "axios": "^0.18.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "convict": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "helmet": "^3.18.0",
    "http-status": "^1.3.2",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "node-cleanup": "^2.1.2",
    "node-schedule": "^1.3.2",
    "pm2": "^3.5.1",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/plugin-proposal-throw-expressions": "^7.2.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "axios-mock-adapter": "^1.16.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-promise": "^4.1.1",
    "mocha": "^6.1.4",
    "nock": "^10.0.6",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "prettier-eslint-cli": "^4.7.1",
    "sinon": "^7.3.2",
    "supertest": "^4.0.2"
  }
}
